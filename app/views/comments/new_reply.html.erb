<%= @parent_comment.comment %><br/><br/>
<%= form_for @reply do |reply| %>
  <%= reply.text_area :comment, :rows => 8 %><br />
  <%= reply.hidden_field :in_reply_to, :value => @parent_comment.id %> 
  <%= reply.hidden_field :post_id, :value => @parent_comment.post_id %><br/> 
  <%= reply.submit "Reply" %>
<% end%>
