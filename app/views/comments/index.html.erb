<% @comments.each do |comment| %>
  
  <em>Posted <%= time_ago_in_words(comment.created_at)%> ago | </em>

  <div>
    <%= button_to "^", {:action => :create, :controller => :upvotes, :method => :post, :upvotable_id => comment.id, :upvotable_type => comment.class.to_s, :url => request.url}, :remote => true %>
    <%= comment.comment %>
  </div>
<% end %>


