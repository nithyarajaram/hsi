<div>
   <% if !comment.upvotes.empty? %>
    <%= pluralize(comment.upvotes.count, "point") %> |
   <% end %>

    <em>Posted <%= time_ago_in_words(comment.created_at)%> ago | By <%= comment.user.email %> |
      <%= link_to 'Delete', comment, :method => :delete %></em>
  </div> 

  <div>
    <%= button_to "^", :action => :create, :controller => :upvotes, :method => :post, :upvotable_id => comment.id, :upvotable_type => comment.class.to_s, :url => request.url %>
    <%= comment.comment %>
  </div>

  <div>
    <%= link_to "reply", new_reply_comment_path(comment) %>
  </div>
  
 
