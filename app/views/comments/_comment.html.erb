<%= div_for comment do %>
  <span class="dateandoptions">
    Posted <%= time_ago_in_words(comment.created_at)%> ago | By <%= comment.user.email %> |
    <%= link_to 'Delete', comment_path(comment), :method => :delete, :class => "delete", :remote => true %>
    
  </span>
    <br />
    <%= content_tag(:p, comment.comment, :class => "comment_body") %>
  <% end %>

    
